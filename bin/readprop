#! /usr/bin/env python

from zenvlib import cli
from zenvlib.propfiles import readprop


if __name__ == '__main__':
    from sys import argv

    cli.check_usage(min_args=1, usage=
        '%P: Read one or more build properties from the settings for the current workspace.\n' +
        'Usage: %P <property_name>...'
    )
    cli.fail_without_workspace()

    props = [readprop(i) for i in argv[1:]]

    exit_code = 0
    for value in props:
        if value is not None:
            print value
        else:
            exit_code = 1

    exit(exit_code)
